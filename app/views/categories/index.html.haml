.container.mt-5
  .row
    .col-md-8.offset-md-2
      %p= notice
      %h1.text-center Categories
      %table.hover
        %thead
          %tr
            %th Name
            %th{:colspan => "2"} Actions
        %tbody
          - @categories.each do |category|
            %tr
              %td= category.name
              %td= link_to 'Show', category
              %td= link_to 'Edit', edit_category_path(category)
      %br/
      = link_to 'New Category', new_category_path, class: 'button success'
