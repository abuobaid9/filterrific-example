.container.mt-5
  .row
    .col-md-8.offset-md-2
      %p= notice
      %h1.text-center Categories
      %table.hover
        %thead
          %tr
            %th Name
            %th Edit  
            %th Delete 
        %tbody
          - @categories.each do |category|
            %tr
              %td= category.name
              %td= link_to 'Edit', edit_category_path(category)
              %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
      %br/
      = link_to 'New Category', new_category_path, class: 'button success'
